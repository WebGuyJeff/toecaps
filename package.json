{
  "name": "joinery-theme",
  "version": "0.0.1",
  "description": "## A WordPress theme for tradespeople and manufacturers.",
  "author": "Jefferson Real",
  "email": "me@jeffersonreal.uk",
  "homepage": "https://github.com/bigupjeff/joinery-theme#readme",
  "license": "GPL-3.0-or-later",
  "main": "index.php",
  "source": "src/index.html",
  "targets": {
    "default": {
      "distDir": "./build"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bigupjeff/joinery-theme.git"
  },
  "bugs": {
    "url": "https://github.com/bigupjeff/joinery-theme/issues"
  },
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "scripts": {
    "start": "wpackio-scripts start",
    "build": "wpackio-scripts build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint 'src/**/*.php'",
    "bootstrap": "wpackio-scripts bootstrap",
    "archive": "wpackio-scripts pack"
  },
  "devDependencies": {
    "@wordpress/eslint-plugin": "^12.0.0",
    "@wpackio/scripts": "^6.4.0",
    "postcss": "^8.4.12"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "tabWidth": 4,
    "useTabs": true,
    "semi": true,
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "insertPragma": true,
    "embeddedLanguageFormatting": "off",
    "overrides": [
      {
        "excludeFiles": "*.css"
      }
    ]
  },
  "eslint": {
    "env": {
      "es6": true,
      "browser": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@wordpress/eslint-plugin/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "semi": "error",
      "no-console": 0,
      "react/jsx-uses-vars": "error"
    }
  },
  "keywords": [
    "wordpress",
    "joinery",
    "theme"
  ],
  "dependencies": {
    "@wpackio/entrypoint": "^6.4.0"
  }
}
